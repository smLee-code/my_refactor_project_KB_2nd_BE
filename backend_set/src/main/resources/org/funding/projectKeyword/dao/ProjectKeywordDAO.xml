<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.funding.projectKeyword.dao.ProjectKeywordDAO">

    <select id="findProjectKeywordMapping" parameterType="org.funding.projectKeyword.dto.ProjectKeywordRequestDTO" resultType="org.funding.projectKeyword.vo.ProjectKeywordVO">
        select *
        from project_keywords
        where project_id = #{projectId} and keyword_id = #{keywordId}
    </select>

    <select id="selectKeywordIdsByProjectId" parameterType="org.funding.projectKeyword.dto.ProjectKeywordRequestDTO" resultType="Long">
        select keyword_id
        from project_keywords
        where project_id = #{project_id}
    </select>

    <select id="selectProjectIdsByKeywordIds" parameterType="list" resultType="Long">
        SELECT DISTINCT project_id
        FROM project_keywords
        WHERE keyword_id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


    <!-- ðŸ‘‡ ë¬¸ì œëœ SQL ì¶”ê°€ -->
    <select id="selectKeywordIdsByUserId" parameterType="Long" resultType="Long">
        SELECT keyword_id
        FROM user_keywords
        WHERE user_id = #{userId}
    </select>



    <insert id="insertProjectKeyword" parameterType="org.funding.projectKeyword.dto.ProjectKeywordRequestDTO">
        insert into project_keywords (project_id, keyword_id)
        values (#{projectId}, #{keywordId})
    </insert>

    <delete id="deleteProjectKeyword" parameterType="org.funding.projectKeyword.dto.ProjectKeywordRequestDTO">
        delete from project_keywords
        where project_id = #{projectId} and keyword_id = #{keywordId}
    </delete>
</mapper>
