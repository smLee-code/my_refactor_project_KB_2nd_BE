<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.funding.fundKeyword.dao.FundKeywordDAO">

    <select id="findFundKeywordMapping" parameterType="org.funding.fundKeyword.dto.FundKeywordRequestDTO" resultType="org.funding.fundKeyword.vo.FundKeywordVO">
        select *
        from fund_keywords
        where fund_id = #{fundId} and keyword_id = #{keywordId}
    </select>

    <select id="selectKeywordIdsByFundId" parameterType="Long" resultType="Long">
        select keyword_id
        from fund_keywords
        where fund_id = #{fund_id}
    </select>

    <insert id="insertFundKeyword" parameterType="org.funding.fundKeyword.dto.FundKeywordRequestDTO">
        insert into fund_keywords (fund_id, keyword_id)
        values (#{fundId}, #{keywordId})
    </insert>

    <delete id="deleteFundKeyword" parameterType="org.funding.fundKeyword.dto.FundKeywordRequestDTO">
        delete from fund_keywords
        where fund_id = #{fundId} and keyword_id = #{keywordId}
    </delete>
</mapper>